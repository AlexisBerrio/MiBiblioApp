<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexisberrio.formulario">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.alexisberrio.formulario.ui.bottom.BottomActivity"
            android:label="@string/title_activity_bottom">

        </activity>

        <activity
            android:name="com.alexisberrio.formulario.ui.login.LoginActivity"
            android:theme="@style/NoActionBar" />

        <activity
            android:name="com.alexisberrio.formulario.ui.splash.SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.alexisberrio.formulario.ui.registro.RegistroActivity"
            android:theme="@style/NoActionBar" />

    </application>

</manifest>